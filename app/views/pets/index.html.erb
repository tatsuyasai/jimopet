<div class="pet-index-wrapper">
  <div class="pet-container2">
        <h1 class="text-center ">飼い主探してます</h1>
    <div class="row">
      <% @pets.each do |pet| %>
      
        <div class="col-md-offset-1 col-md-3">
          <div class="pet-index-single">
            <h2 class="pet-author">
              <%= pet.user.name %>
            </h2>
            <%= image_tag pet.image.url %>
            
            <p class="pet-text">
              <%= pet.description %>
            </p>
          </div>
        </div>
      
      <% end %>
    </div>
  </div>
</div>