<!DOCTYPE html>
<html>
  <head>
    <title>Jimopet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/a60a9ff68e.js" crossorigin="anonymous"></script>
   
  </head>

  <body>
    <% flash.each do |key, value| %> <!--登録フィードバック-->
  　　<div class="alert alert-<%= key %>" role="alert"><%= value %></div>
　　<% end %>
　　
　　<!-- ナビゲーションバー-->
　　<nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <%= link_to root_path do %>
          <span><%= image_tag "logo2.png", class: "navbar-brand" %></span>
        <% end %>
        
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li>
              <%= link_to logout_path, method: :delete do %>
                <i class="fas fa-sign-out-alt fa-3x fa-white"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
        
      </div>
    </nav>
    <%= yield %>
    <!--5秒で消える-->
    <script> 
  　$(function(){
    　$(".alert").fadeOut(5000);
 　　 });
　　</script>
  </body>
</html>
