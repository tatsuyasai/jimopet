<div class="pet-index-wrapper">
    <h3 class="text-center text">アドレスより投稿者へご連絡ください</h4>
      
  <div class="pet-container2">
    <div class="row">
      <% @favorite_pets.each do |pet| %>
      
        <div class="col-md-4">
          <div class="card2">
            <div class="card-header"><%= pet.type %></div>
            <div class="card-body">
            <h5 class="pet-author">
              <p class="pet-text">ユーザー名：<%= pet.user.name %></p>
            </h5>
            <p class="pet-text1">
            <%= pet.prefecture %>
            </p>
            <p class="pet-text2">
            <%= pet.city %>
            </p>
             <%= image_tag pet.image.url, style: 'max-height: 300px; width: 100%; object-fit: contain' %>
            <div class="card-body">
            
            
            <p class="message">
              ＜メッセージ＞<br>
              <%= pet.description %>
            </p>
            
            <p class="pet-text">
              <%= pet.gender %>
            </p>
            
            
            
          <%= link_to favorites_path(pet_id: pet.id), method: :delete, class: 'btn btn-primary rounded-pill' do %>
            <i class="fas fa-paw"> ほしいリストから外す</i>
            <% end %>
            
            <%= link_to comments_new_path(pet_id: pet.id), class: 'btn btn-primary rounded-pill' do %>
            <i class="far fa-comment-dots"> コメント</i>
            <% end %>

            
            <h4>--コメント一覧--</h4>
            <% pet.comments.each do |comment| %>
                <p class="pet-text">
                  <%= comment.user.name %><br>
                  <%= comment.content %>
                  <% if logged_in? && current_user.id == pet.user_id %>
                <span class="delete"><%= link_to "削除", "/pets/#{pet.id}", method: :delete %></span>
                <% end %>
                </p>
            <% end %>
            <p class="time text-right"><%= pet.created_at.to_s(:datetime) %></p><!--.to_s(:datetime)でinitializers/time_format.rbを適用-->
            
            
            
            </div>
           </div>
           <div class="card-footer text-center">連絡先：<%= pet.user.email %></div>
          </div>
        </div>
      
      <% end %>
    </div>
  </div>
</div>